extends layout

block prepend title
  | #{ page.title + ' · '}

block content
  h1.center.mb0.mt-huge= page.title
  time.dkgy.body.block.center.mb-standard= moment.utc(page.date).format('MMMM D, YYYY')
  section.content!= typogr(page.html).typogrify()

block prepend footer
  a(href=contents.index.url).h2.mb2.block « Back home

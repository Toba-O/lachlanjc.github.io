extends layout

block content
  section.bio.mb-large
    img(alt="Portrait" src="http://d1fmxjrxw87eps.cloudfront.net/portrait-round.png").sm-hide.portrait.left
    div.left.ml-large.mt-large
      h2 Lachlan Campbell
      p Hacker + designer for the web.
  h2.mt-huge Articles
  each article in articles
    a(href=article.url)
      h3.mb0= article.title
      p.dkgy= moment.utc(article.date).format('MM/D/YYYY')
